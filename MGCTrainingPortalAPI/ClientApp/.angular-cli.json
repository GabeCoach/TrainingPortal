{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "mgc-training-portal"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "assets/img/favicon/favicon.ico",
        "Web.config"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.css",
        "assets/vendors/bower_components/animate.css/animate.min.css",
        "assets/vendors/bower_components/material-design-iconic-font/dist/css/material-design-iconic-font.min.css",
        "assets/vendors/bower_components/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.min.css",
        "assets/css/app_1.min.css",
        "assets/css/app_2.min.css",
        "../node_modules/@okta/okta-signin-widget/dist/css/okta-sign-in.min.css",
        "../node_modules/@okta/okta-signin-widget/dist/css/okta-theme.css"
      ],
      "scripts": [
        "assets/vendors/bower_components/jquery/dist/jquery.min.js",
        "assets/vendors/bower_components/bootstrap/dist/js/bootstrap.min.js",
        "assets/vendors/bower_components/moment/min/moment.min.js",
        "assets/vendors/bower_components/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js",
        "assets/js/app.min.js",
        "../node_modules/auth0-js/build/auth0.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}
